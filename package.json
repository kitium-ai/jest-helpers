{
  "name": "@kitiumai/jest-helpers",
  "version": "2.0.1",
  "description": "Jest unit and integration test helpers for enterprise testing - mocks, fixtures, matchers, and more",
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kitium-ai/jest-helpers.git"
  },
  "homepage": "https://github.com/kitium-ai/jest-helpers#readme",
  "bugs": {
    "url": "https://github.com/kitium-ai/jest-helpers/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./mocks": {
      "types": "./dist/mocks/index.d.ts",
      "default": "./dist/mocks/index.js"
    },
    "./fixtures": {
      "types": "./dist/fixtures/index.d.ts",
      "default": "./dist/fixtures/index.js"
    },
    "./matchers": {
      "types": "./dist/matchers/index.d.ts",
      "default": "./dist/matchers/index.js"
    },
    "./database": {
      "types": "./dist/database/index.d.ts",
      "default": "./dist/database/index.js"
    },
    "./http": {
      "types": "./dist/http/index.d.ts",
      "default": "./dist/http/index.js"
    },
    "./timers": {
      "types": "./dist/timers/index.d.ts",
      "default": "./dist/timers/index.js"
    },
    "./setup": {
      "types": "./dist/setup/index.d.ts",
      "default": "./dist/setup/index.js"
    },
    "./integration": {
      "types": "./dist/integration/index.d.ts",
      "default": "./dist/integration/index.js"
    },
    "./console": {
      "types": "./dist/console/index.d.ts",
      "default": "./dist/console/index.js"
    },
    "./async": {
      "types": "./dist/async/index.d.ts",
      "default": "./dist/async/index.js"
    },
    "./builders": {
      "types": "./dist/builders/index.d.ts",
      "default": "./dist/builders/index.js"
    },
    "./namespaced": {
      "types": "./dist/index.namespaced.d.ts",
      "default": "./dist/index.namespaced.js"
    },
    "./strict-mode": {
      "types": "./dist/setup/strict-mode.d.ts",
      "default": "./dist/setup/strict-mode.js"
    },
    "./auto-setup": {
      "types": "./dist/setup/auto-setup.d.ts",
      "default": "./dist/setup/auto-setup.js"
    },
    "./auto-setup/unit": {
      "types": "./dist/setup/auto-setup.d.ts",
      "default": "./dist/setup/auto-setup.js"
    },
    "./auto-setup/integration": {
      "types": "./dist/setup/auto-setup.integration.d.ts",
      "default": "./dist/setup/auto-setup.integration.js"
    },
    "./auto-setup/e2e": {
      "types": "./dist/setup/auto-setup.e2e.d.ts",
      "default": "./dist/setup/auto-setup.e2e.js"
    },
    "./auto-setup/contract": {
      "types": "./dist/setup/auto-setup.contract.d.ts",
      "default": "./dist/setup/auto-setup.contract.js"
    },
    "./fluent": {
      "types": "./dist/matchers/fluent.d.ts",
      "default": "./dist/matchers/fluent.js"
    },
    "./property-testing": {
      "types": "./dist/property-testing.d.ts",
      "default": "./dist/property-testing.js"
    },
    "./factories": {
      "types": "./dist/factories.d.ts",
      "default": "./dist/factories.js"
    },
    "./enhanced-errors": {
      "types": "./dist/enhanced-errors.d.ts",
      "default": "./dist/enhanced-errors.js"
    },
    "./visual-accessibility": {
      "types": "./dist/visual-accessibility.d.ts",
      "default": "./dist/visual-accessibility.js"
    },
    "./parameterized-testing": {
      "types": "./dist/parameterized-testing.d.ts",
      "default": "./dist/parameterized-testing.js"
    },
    "./universal-testing": {
      "types": "./dist/universal-testing.d.ts",
      "default": "./dist/universal-testing.js"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.d.ts.map",
    "!dist/**/__tests__/**",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*",
    "types.d.ts",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "keywords": [
    "jest",
    "jest-helpers",
    "jest-utilities",
    "jest-testing",
    "testing",
    "test-utilities",
    "test-helpers",
    "unit-testing",
    "integration-testing",
    "e2e-testing",
    "contract-testing",
    "test-framework",
    "jest-matchers",
    "custom-matchers",
    "jest-mocks",
    "jest-fixtures",
    "test-fixtures",
    "test-mocks",
    "mock-data",
    "test-data",
    "factory-pattern",
    "builder-pattern",
    "test-doubles",
    "spy",
    "stub",
    "mock",
    "fake",
    "http-mocking",
    "api-testing",
    "database-testing",
    "test-database",
    "test-logger",
    "test-timers",
    "async-testing",
    "jest-setup",
    "jest-config",
    "jest-environment",
    "typescript",
    "typescript-testing",
    "enterprise",
    "production-ready",
    "tree-shakable",
    "esm",
    "kitium",
    "kitiumai"
  ],
  "scripts": {
    "build": "tsc -b",
    "build:clean": "npm run clean && npm run build",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc -b --noEmit",
    "type-check": "tsc -b --noEmit",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "format:check": "prettier --check .",
    "changeset": "ensure-changeset && changeset",
    "version": "changeset version",
    "publish:set-token": "set-npm-token",
    "publish:setup": "set-npm-token",
    "publish:check": "npm whoami --registry https://registry.npmjs.org || npm login --registry https://registry.npmjs.org",
    "publish:login": "npm login --registry https://registry.npmjs.org",
    "publish:package": "pnpm run publish:check && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "publish:package:token": "pnpm run publish:setup && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "publish:package:otp": "pnpm run publish:check && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org --otp",
    "publish:dry-run": "pnpm publish --access public --no-git-checks --dry-run --registry https://registry.npmjs.org",
    "publish:dry-run:token": "pnpm run publish:setup && pnpm publish --access public --no-git-checks --dry-run --registry https://registry.npmjs.org",
    "prepublishOnly": "npm run verify",
    "verify": "npm run lint && npm run test && npm run build",
    "release": "pnpm version && pnpm install --lockfile-only"
  },
  "dependencies": {
    "@kitiumai/logger": "^3.0.1",
    "@kitiumai/test-core": "^3.0.0"
  },
  "peerDependencies": {
    "jest": "^29.5.0",
    "typescript": "^5.6.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@kitiumai/config": "^3.1.4",
    "@kitiumai/lint": "^3.0.0",
    "@kitiumai/scripts": "^2.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^24.10.1",
    "eslint": "^9.15.0",
    "jest": "^29.5.0",
    "jest-diff": "^30.2.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.0",
    "typescript": "^5.6.0"
  },
  "pnpm": {
    "overrides": {
      "glob": "^10.3.10",
      "inflight": "npm:@jsdevtools/inflight@^1.0.6",
      "lodash.get": "npm:lodash@^4.17.21",
      "read-pkg-up": "^11.0.0",
      "semver-diff": "^5.0.0"
    }
  }
}
