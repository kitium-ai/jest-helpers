{
  "name": "@kitiumai/jest-helpers",
  "version": "1.0.2",
  "description": "Jest unit and integration test helpers for enterprise testing",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kitium-ai/jest-helpers.git"
  },
  "homepage": "https://github.com/kitium-ai/jest-helpers#readme",
  "bugs": {
    "url": "https://github.com/kitium-ai/jest-helpers/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./mocks": {
      "types": "./dist/mocks/index.d.ts",
      "default": "./dist/mocks/index.js"
    },
    "./fixtures": {
      "types": "./dist/fixtures/index.d.ts",
      "default": "./dist/fixtures/index.js"
    },
    "./matchers": {
      "types": "./dist/matchers/index.d.ts",
      "default": "./dist/matchers/index.js"
    },
    "./database": {
      "types": "./dist/database/index.d.ts",
      "default": "./dist/database/index.js"
    },
    "./http": {
      "types": "./dist/http/index.d.ts",
      "default": "./dist/http/index.js"
    },
    "./timers": {
      "types": "./dist/timers/index.d.ts",
      "default": "./dist/timers/index.js"
    },
    "./setup": {
      "types": "./dist/setup/index.d.ts",
      "default": "./dist/setup/index.js"
    },
    "./integration": {
      "types": "./dist/integration/index.d.ts",
      "default": "./dist/integration/index.js"
    },
    "./console": {
      "types": "./dist/console/index.d.ts",
      "default": "./dist/console/index.js"
    },
    "./async": {
      "types": "./dist/async/index.d.ts",
      "default": "./dist/async/index.js"
    },
    "./builders": {
      "types": "./dist/builders/index.d.ts",
      "default": "./dist/builders/index.js"
    },
    "./namespaced": {
      "types": "./dist/index.namespaced.d.ts",
      "default": "./dist/index.namespaced.js"
    },
    "./strict-mode": {
      "types": "./dist/setup/strict-mode.d.ts",
      "default": "./dist/setup/strict-mode.js"
    },
    "./auto-setup": {
      "types": "./dist/setup/auto-setup.d.ts",
      "default": "./dist/setup/auto-setup.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc -b",
    "build:clean": "npm run clean && npm run build",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc -b --noEmit",
    "type-check": "tsc -b --noEmit",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "format:check": "prettier --check .",
    "changeset": "ensure-changeset && changeset",
    "version": "changeset version",
    "publish:set-token": "set-npm-token",
    "publish:setup": "set-npm-token",
    "publish:check": "npm whoami --registry https://registry.npmjs.org || npm login --registry https://registry.npmjs.org",
    "publish:login": "npm login --registry https://registry.npmjs.org",
    "publish:package": "pnpm run publish:check && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "publish:package:token": "pnpm run publish:setup && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "publish:package:otp": "pnpm run publish:check && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org --otp",
    "publish:dry-run": "pnpm publish --access public --no-git-checks --dry-run --registry https://registry.npmjs.org",
    "publish:dry-run:token": "pnpm run publish:setup && pnpm publish --access public --no-git-checks --dry-run --registry https://registry.npmjs.org",
    "prepublishOnly": "npm run verify",
    "verify": "npm run lint && npm run test && npm run build",
    "release": "pnpm version && pnpm install --lockfile-only"
  },
  "dependencies": {
    "@kitiumai/logger": "^2.0.0"
  },
  "peerDependencies": {
    "jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@kitiumai/config": "^2.0.0",
    "@kitiumai/lint": "^2.0.0",
    "@kitiumai/scripts": "^1.0.0",
    "@kitiumai/test-core": "^2.0.0",
    "@changesets/cli": "^2.27.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "eslint": "^9.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "pnpm": {
    "overrides": {
      "glob": "^10.3.10",
      "inflight": "npm:@jsdevtools/inflight@^1.0.6",
      "lodash.get": "npm:lodash@^4.17.21",
      "read-pkg-up": "^11.0.0",
      "semver-diff": "^5.0.0"
    }
  }
}
